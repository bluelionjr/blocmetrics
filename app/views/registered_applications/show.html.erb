<br>
<h1><%= @registered_application.title %></h1>
<div class="row">
  <div class="col-md-8">
    <h4><%= @registered_application.url %></h4>
    <h4><%= @registered_application.user.email %></h4>
  </div>
  <br>

  <div class="col-md-4">
    <%= link_to "Edit", edit_registered_application_path(@registered_application), class: 'btn btn-success' %>
    <%= link_to "Remove Application", @registered_application, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to unregister this application?'} %>
  </div>
</div>
